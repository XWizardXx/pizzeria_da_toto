<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuTendina">

    <ImageButton
        android:id="@+id/toHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="195dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toTopOf="@+id/toUser"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/titolo"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="?attr/homeAsUpIndicator" />

    <Button
        android:id="@+id/toUser"
        android:layout_width="110dp"
        android:layout_height="48dp"
        android:layout_marginStart="285dp"
        android:layout_marginEnd="16dp"
        android:text="UserPage"
        app:layout_constraintBottom_toTopOf="@+id/toMenu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toHome" />

    <Button
        android:id="@+id/toMenu"
        android:layout_width="110dp"
        android:layout_height="48dp"
        android:layout_marginStart="285dp"
        android:layout_marginEnd="16dp"
        android:text="Menu"
        app:layout_constraintBottom_toTopOf="@+id/toOptions"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toUser" />

    <Button
        android:id="@+id/toOptions"
        android:layout_width="110dp"
        android:layout_height="48dp"
        android:layout_marginStart="285dp"
        android:layout_marginEnd="16dp"
        android:text="Options"
        app:layout_constraintBottom_toTopOf="@+id/toOrders"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toMenu" />

    <Button
        android:id="@+id/toOrders"
        android:layout_width="110dp"
        android:layout_height="48dp"
        android:layout_marginStart="285dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="480dp"
        android:text="Orders"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toOptions" />

    <TextView
        android:id="@+id/titolo"
        android:layout_width="137dp"
        android:layout_height="43dp"
        android:text="Da TotÃ²"
        android:textSize="40dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>